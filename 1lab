#include <iostream>
using namespace std;

int main()
{
    cout.precision(12);

    setlocale(LC_ALL, "Russian"); //русский шрифт

    double a = 12.1;
    double b = 8.82;
    double c = 10.21;

    double p = a + b + c;
    double ha = sqrt(p * (p - a) * (p - b) * (p - c)) * 2 / a;
    double hb = sqrt(p * (p - a) * (p - b) * (p - c)) * 2 / b;
    double hc = sqrt(p * (p - a) * (p - b) * (p - c)) * 2 / c;

    cout << "\n Высота ha=" << ha;
    cout << "\n Высота hb=" << hb;
    cout << "\n Высота hc=" << hc;

    double ma = sqrt(2*b*b+2*c*c-a*a) / 2;
    double mb = sqrt(2 * a *a + 2 * c * c - b * b) / 2;
    double mc = sqrt(2 * b * b + 2 * a * a - c * c) / 2;

    cout << "\n Медиана ma=" << ma;
    cout << "\n Медиана mb=" << mb;
    cout << "\n Медиана mc=" << mc;

    double ba = 2 * sqrt(b * c * p * (p - a)) / (b + c);
    double bb = 2 * sqrt(a * c * p * (p - b)) / (a + c);
    double bc = 2 * sqrt(b * a * p * (p - c)) / (b + a);

    cout << "\n Биссектриса ba=" << ba;
    cout << "\n Биссектриса bb=" << bb;
    cout << "\n Биссектриса bc=" << bc;

    cout << endl;
    system("pause");
}
